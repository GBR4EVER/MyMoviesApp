<h1>All Reviews</h1>
<hr/>

<% @reviews.each do |review| %>
  <div class="row">
  
    <div class="col-md-2">
      <section class="review_info center">
        
      </section>
    </div>
    
    <div class="col-lg-8 well">
      <h4><%= link_to review.description, " " %></h4>
      <p><%= review.author %></p>
      <p>
        <span class='quiet'><small> <%= time_ago_in_words(review.created_at) %> ago</small></span>
      </p>
      <p>
    </div>
  
  </div>
<% end %>