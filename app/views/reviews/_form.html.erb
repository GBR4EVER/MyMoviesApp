<%= render 'shared/errors', obj: @review %>

<div class="row">
  <div class="well col-md-8 col-md-offset-2">
    <%= form_for @review do |f| %>
      <%= f.label :author %>
      <%= f.text_field :author%>
      
      <%= f.label :email %>
      <%= f.text_field :email %>
      
      <%= f.label :description %>
      <%= f.text_field :description%>
      
      <%= f.label :summary %>
      <%= f.text_area :summary, rows: 6 %>
      
      <%= f.submit(@review.new_record? ? 'Create Review' : 'Edit Review', class: "btn btn-success") %>
    <% end %>
  </div>
</div>