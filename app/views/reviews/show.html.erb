<%= render 'shared/page_title', title: @review.movie.moviename %>

<div class="row">
  <div class="col-md-4 pull-right center">
    <img src=""/>
    <p>
      <h5>Brought to you by: <%= @review.author %></h5>
  </div>
  <div class="col-md-8">
    <%= link_to "Edit this review", edit_review_path(@review), class: "btn btn-success pull-right" %>
    <h3><%= @review.description %></h3>
    <div class="well">
      <p>
        <strong>Summary:</strong>
      </p>
      <%= simple_format(@review.summary) %>
    </div>
  </div>
</div>

<h5><%= link_to "Return to Reviews List", reviews_path, class: "btn btn-warning btn-small" %></h5>